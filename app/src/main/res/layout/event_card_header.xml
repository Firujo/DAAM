<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card_header"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:padding="10dp"
    >

  <ImageView
      android:id="@+id/user_avatar"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginStart="18dp"
      android:src="@color/colorAccent"
      />

  <TextView
      android:id="@+id/user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="18dp"
      android:layout_toEndOf="@id/user_avatar"
      tools:text="JORGE JASUS"
      />

  <TextView
      android:id="@+id/event_detail_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/user_name"
      android:layout_marginStart="18dp"
      android:layout_marginTop="4dp"
      android:layout_toEndOf="@id/user_avatar"
      tools:text="TOUR DOS VELHOS DO RESTELO"
      />

  <ImageView
      android:id="@+id/number_of_people"
      android:layout_width="15dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/user_avatar"
      android:layout_below="@id/event_detail_title"
      android:layout_marginStart="18dp"
      android:layout_marginTop="1dp"
      android:layout_toEndOf="@id/user_avatar"
      android:src="@drawable/ic_account_multiple_black_48dp"
      />

  <TextView
      android:id="@+id/number_of_likes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/user_avatar"
      android:layout_marginStart="2dp"
      android:layout_toEndOf="@id/number_of_people"
      tools:text="9"
      />

  <ImageView
      android:id="@+id/location_image"
      android:layout_width="15dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/user_avatar"
      android:layout_below="@id/event_detail_title"
      android:layout_marginStart="8dp"
      android:layout_marginTop="1dp"
      android:layout_toEndOf="@id/number_of_likes"
      android:src="@drawable/ic_map_marker_black_18dp"
      />

  <TextView
      android:id="@+id/event_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/user_avatar"
      android:layout_marginStart="2dp"
      android:layout_toEndOf="@id/location_image"
      tools:text="Belem"
      />

  <ImageView
      android:id="@+id/clock_image"
      android:layout_width="15dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/user_avatar"
      android:layout_below="@id/event_detail_title"
      android:layout_marginStart="8dp"
      android:layout_marginTop="2dp"
      android:layout_toEndOf="@id/event_location"
      android:src="@drawable/ic_clock_black_18dp"
      />

  <TextView
      android:id="@+id/timestamp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/user_avatar"
      android:layout_marginStart="2dp"
      android:layout_toEndOf="@id/clock_image"
      tools:text="15 minutes ago"
      />


</RelativeLayout>