<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card_header"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/user_avatar"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="18dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/user_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="4dp"
      app:layout_constraintBottom_toTopOf="@+id/event_detail_title"
      app:layout_constraintStart_toEndOf="@id/user_avatar"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="JORGE JASUS" />

  <TextView
      android:id="@+id/event_detail_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toTopOf="@+id/number_of_likes"
      app:layout_constraintStart_toEndOf="@id/user_avatar"
      app:layout_constraintTop_toBottomOf="@id/user_name"
      tools:text="TOUR DOS VELHOS DO RESTELO" />

  <TextView
      android:id="@+id/number_of_likes"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/event_location"
      app:layout_constraintStart_toEndOf="@id/user_avatar"
      app:layout_constraintTop_toBottomOf="@id/event_detail_title"
      tools:text="9" />

  <TextView
      android:id="@+id/event_location"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/timestamp"
      app:layout_constraintStart_toEndOf="@id/number_of_likes"
      app:layout_constraintTop_toBottomOf="@id/event_detail_title"
      tools:text="Belem" />

  <TextView
      android:id="@+id/timestamp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/event_location"
      app:layout_constraintTop_toBottomOf="@id/event_detail_title"
      tools:text="15 minutes ago" />


</android.support.constraint.ConstraintLayout>